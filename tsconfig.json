{
    "compilerOptions": {
      "target": "ES2020",
      "moduleResolution": "Node",
      "experimentalDecorators": true,
      "jsx": "preserve",
      "jsxFactory": "this.$render",
      "jsxFragmentFactory": "this.$render",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": false,
      "baseUrl": ".",
      "paths": {
        "@ijstech/components": ["node_modules/@ijstech/components"],
        "@scom-designer/*": ["src/*"],
      }
    },
    "include": ["src/*.tsx", "src/*.ts", "src/helpers/config.ts", "src/helpers/utils.ts", "src/build/tonConnectorSender.ts"],
    "exclude": ["node_modules"]
  }
  
  